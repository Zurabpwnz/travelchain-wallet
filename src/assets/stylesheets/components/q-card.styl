//
// q-card
// --------------------------------------------------

.q-card
  background #fff
  margin 20px 0 20px 40px
  padding 20px 0 10px
  box-shadow 3px 5px 8px rgba(137, 137, 137, 0.15)

  .q-card-title
    color #d1d1d1
    font-family Roboto
    font-size 13px
    font-weight 300
    line-height 24px
    .q-icon
      color #ff005a

  .q-card-main
    color #292929
    font-family Roboto
    font-size 24px
    font-weight 500
    line-height 24px
    text-transform uppercase

  .q-btn
    color #23cdfc
    font-family Roboto
    font-size 12px
    font-weight 400
    line-height 24px
    text-transform uppercase
