
.head-icon
  font-size 1.5em
  margin-top -0.25rem
  margin-right 0.5rem

#social-logger
  .q-btn
    &.connect
      padding 0
      min-height 0
      min-width 235px
      align-items stretch

      .q-btn-inner
        min-height 36px
        align-items stretch
        justify-content space-between

        span, .fa:before, .q-icon
          order 2
          display flex
          align-items center

        .fa:before, .cost
          order 3

        .fa:before, .cost, .q-icon
          margin 0
          width 40px
          height 100%
          color #fff
          justify-content center

        .q-icon
          background #027be3
          font-size 1.5em

        .cost
          width 60px
          background #4caf50

        .text
          flex 1
          padding 0 12px

    &.roudedtt
      height 45px
      width 45px
      margin-right 1rem
      font-size 0.8em
      line-height 1

  .fa-google-plus:before
    background-color $social-google-back

  .fa-facebook:before
    background-color $social-facebook-back

  .fa-vk:before
    background-color $social-vk-back